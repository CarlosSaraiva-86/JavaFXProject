<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="inter.controller.PrincipalController">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="Hospede">
            <items>
              <MenuItem fx:id="manterHospede" mnemonicParsing="false" onAction="#exibirHospede" text="Cadastro Hóspede" />
              <MenuItem fx:id="fazerReserva" mnemonicParsing="false" onAction="#exibirHospede" text="Fazer Reserva" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Quartos">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#exibirQuarto" text="Cadastro Quarto" />
              <MenuItem mnemonicParsing="false" onAction="#exibirAlugar" text="Alugar Quarto" />
              <MenuItem mnemonicParsing="false" onAction="#exibirEncerrar" text="Encerrar Estadia" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Serviços">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#exibirServicos" text="Cadastro Serviço" />
                  <MenuItem mnemonicParsing="false" onAction="#exibirFechar" text="Encerrar Serviços" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <AnchorPane fx:id="anchorPrincipal" prefHeight="391.0" prefWidth="600.0" />
   </children>
</VBox>
